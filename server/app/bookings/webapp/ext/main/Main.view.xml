<mvc:View xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:macros="sap.fe.macros"
    xmlns:html="http://www.w3.org/1999/xhtml" controllerName="sap.fe.cap.travel.ext.main.Main">
    <f:DynamicPage id="TravelBookings" class="sapUiResponsiveContentPadding">
        <f:dependents/>
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Travel Bookings" level="H2"/>
                </f:heading>
                <f:snappedContent>
                    <Text text="{fbConditions>/appliedFilters}" />
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <VBox>
                    <macros:FilterBar id="FilterBar" metaPath="@com.sap.vocabularies.UI.v1.SelectionFields" filterChanged=".handlers.onFiltersChanged" />
                </VBox>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>    
            <VBox>        
              <macros:Chart id="chartDefault" filterBar="FilterBar" metaPath="@com.sap.vocabularies.UI.v1.Chart" selectionChange=".handlers.onChartSelectionChanged" personalization="Type,Item,Sort" selectionMode="Single" />
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>